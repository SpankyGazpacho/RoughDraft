import get
import val
import sort
import Error
import showtime

callcount = [0, 0]

def main(listtype):

    errorcodelist = [0]


    seplist = get.getlist()

    newlist, valerrors = val.validatelist(seplist, listtype, errorcodelist)


    errorcodelist.append(valerrors)

    for errindex in range(0, len(errorcodelist)):
        Error.errormessage(errindex, errorcodelist[errindex], callcount, seplist, listtype)
        callcount[errindex] += 1

    sortedlist = sort.sortlist(newlist)

    result = showtime.showlist(sortedlist)
running = True

while (running):

    userinput =input("Enter a i/s or enter q or quit to end the program:").lower()

    if (userinput =="q") | (userinput=="quit"):
        running = False
        break
    main(userinput)
    Continue = input("Would you like to enter another list? (yes/no) ").lower()
    repcheck = True
    while repcheck:
        if (Continue == 'no') | (Continue == 'n'):
            running = False
            repcheck = False
        elif(Continue == 'yes') | (Continue == 'y'):
            running = True
            repcheck = False
            gamemessage=("Let start with what kind of list agian, type s for string or i for intigers")
        else:
            (print("Please enter 'yes' or 'no'. "))
